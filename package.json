{
  "name": "vite-plugin-serve-static",
  "version": "0.1.2",
  "description": "A Vite plugin for serving static files during local development",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reifiedbeans/vite-plugin-serve-static.git"
  },
  "license": "MIT",
  "homepage": "https://github.com/reifiedbeans/vite-plugin-serve-static",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && tsup",
    "clean": "rimraf dist",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint --cache --max-warnings=0 .",
    "lint:fix": "eslint --fix --cache --max-warnings=0 .",
    "prepack": "npm-run-all build format:check lint"
  },
  "peerDependencies": {
    "vite": "^5.0.0"
  },
  "dependencies": {
    "mime-types": "^2.1.35"
  },
  "devDependencies": {
    "@sensible-ts/prettier": "^1.0.0",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ]
  },
  "prettier": "@sensible-ts/prettier",
  "tsup": {
    "entry": [
      "index.ts"
    ],
    "target": "es2020",
    "format": [
      "esm"
    ],
    "dts": true
  },
  "publishConfig": {
    "access": "public"
  }
}
