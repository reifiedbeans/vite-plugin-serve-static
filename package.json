{
  "name": "vite-plugin-serve-static",
  "version": "0.1.3",
  "description": "A Vite plugin for serving static files during local development",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reifiedbeans/vite-plugin-serve-static.git"
  },
  "license": "MIT",
  "homepage": "https://github.com/reifiedbeans/vite-plugin-serve-static",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && tsup",
    "clean": "rimraf dist",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint --cache --max-warnings=0 .",
    "lint:fix": "eslint --fix --cache --max-warnings=0 .",
    "prepack": "npm-run-all build test lint format:check",
    "test": "vitest --run"
  },
  "peerDependencies": {
    "vite": "^5.0.0"
  },
  "dependencies": {
    "mime-types": "^2.1.35"
  },
  "devDependencies": {
    "@sensible-ts/semantic-release": "^1.0.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "extends": "@sensible-ts/semantic-release"
  }
}
